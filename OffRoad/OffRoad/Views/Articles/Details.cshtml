@model OffRoad.Models.Article

@{
    ViewBag.Title = "Details";
}

<div class="container-fluid">
    <div class="row banner">
        <div class="col-md-12">
            <div id="image-home">
                <img class="img-responsive" src="~/Content/Image/banniere-article.png" />
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-8">
        <br />
        <span id="article-title">@Html.DisplayFor(model => model.Title)</span><br />
        <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
        <span class="article-element">@Html.DisplayFor(model => model.CreateDate)</span>
        <span class="glyphicon glyphicon-user"></span>
        <span class="article-element">@Html.DisplayFor(model => model.Author.NickName)</span>
        <span class="glyphicon glyphicon-comment"></span>
        <span class="article-element">5</span><br /><br />
        @Html.DisplayNameFor(model => model.Text)

    </div>
    <div class="col-md-4">
        <br>
        <div class="right-side">
            <div class="center">
                <span>SUIVEZ-NOUS SUR FACEBOOK</span><br /><br />
                <iframe src="http://www.facebook.com/plugins/likebox.php?
                    href=http%3A%2F%2Fwww.facebook.com%2FFrancefootball.fr&amp;
                    width=292&amp;colorscheme=light&amp;show_faces=false&amp;
                    border_color&amp;stream=false&amp;header=false&amp;height=62"
                                    scrolling="no" frameborder="0" style="border:none; overflow:
                    hidden;width:292px; height:62px;" allowTransparency="true">
                </iframe>
            </div>
            <br />
            <img width="20px" src="~/Content/Image/icon-fb.png" />
            <span style="font-size : 10px">FaceBook Social Design</span>
       </div>
       
    </div>
</div>
