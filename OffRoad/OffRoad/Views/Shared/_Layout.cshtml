@{var currentUser = HttpContext.Current.User.Identity.Name;}
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="col-md-5">
                    <img src="~/Content/Image/Logo.png" id="logo" class="" />
                </div>
                
            </div>
            <div class="navbar-collapse collapse navbar-right" >
                <ul class="nav navbar-nav">
                    <li>
                        <a href='@Url.Action("Index", "Articles")'>
                            <img src='@Url.Content("~/Content/Image/Article.png")' class="icon"/>
                            ARTICLES
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index", "Events")'>
                            <img src='@Url.Content("~/Content/Image/Coeur.png")' class="icon" />
                            EVENEMENTS
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index", "Galleries")'>
                            <img src='@Url.Content("~/Content/Image/Polaroid.png")' class="icon" />
                            GALLERIES
                        </a>
                    </li>
                    @if (currentUser != "")
                    {
                        <li>
                            <a href='@Url.Action("LogOut", "Auth")'>
                                <img src='@Url.Content("~/Content/Image/Pointeur.png")' class="icon" />
                                DECONNEXION
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href='@Url.Action("LogIn", "Auth")'>
                                <img src='@Url.Content("~/Content/Image/Pointeur.png")' class="icon" />
                                CONNEXION
                            </a>
                        </li>
                    }
                    
                </ul>
            </div>
            
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
