@{
    ViewBag.Title = "Password";
}

<div class="container-fluid">
    <div class="row banner">
        <div class="col-md-12">
            <img src="~/Content/Image/header_connexion.png" class="img-responsive" />
        </div>
    </div>
</div>

<div class="container body-content">
    @using (Ajax.BeginForm("_Password", new AjaxOptions
    {
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "resultats",
        OnFailure = "SendMail",
    }))
    {
        <div class="row">
            <div class="col-md-4 col-lg-offset-4">
                <h4>Réinitialisation du mot de passe</h4>
                <div id="resultats">
                    @{Html.RenderAction("_Password");}
                </div>
                <input type="email" name="mail" id="mail" class="form-control" placeholder="Email du compte" />
                <input type="submit" value="Générer mot de passe" class="btn btn-success" id="btn_connexion">
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    function SendMail() {
        $("#resultats").html("Une erreur s'est produite lors de l'envoie du mail, veuillez réessayer ...");
    }
</script>
