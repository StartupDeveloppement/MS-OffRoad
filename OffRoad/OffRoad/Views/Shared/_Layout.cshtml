@{
    var currentUser = HttpContext.Current.User.Identity.Name;

}
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/moment")
    @Scripts.Render("~/bundles/datepicker")
    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>    
</head>
<body>
    <div id="page">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="col-md-5">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src="~/Content/Image/Logo.png" id="logo"  />
                    </a>
                </div>              
            </div>
            <div class="navbar-collapse collapse navbar-right" >
                <ul class="nav navbar-nav">
                    <li>
                        <a href='@Url.Action("Index", "Articles")'>
                            <img src='@Url.Content("~/Content/Image/Article.png")' class="icon"/>
                            ARTICLES
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index", "Events")'>
                            <img src='@Url.Content("~/Content/Image/Coeur.png")' class="icon" />
                            EVENEMENTS
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("Index", "Galleries")'>
                            <img src='@Url.Content("~/Content/Image/Polaroid.png")' class="icon" />
                            GALLERIES
                        </a>
                    </li>
                    @if (currentUser != "")
                    {
                    <li>
                        <a href='@Url.Action("Index", "BackOffice")'>
                            <img src='@Url.Content("~/Content/Image/users.png")' class="icon" />
                            UTILISATEURS
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("MonCompte", "BackOffice")'>
                            <img src='@Url.Content("~/Content/Image/users.png")' class="icon" />
                            MON COMPTE
                        </a>
                    </li>
                    <li>
                        <a href='@Url.Action("LogOut", "Auth")'>
                            <img src='@Url.Content("~/Content/Image/Pointeur.png")' class="icon" />
                            DECONNEXION
                        </a>
                    </li>
                    }
                    else
                    {
                        <li>
                            <a href='@Url.Action("LogIn", "Auth")'>
                                <img src='@Url.Content("~/Content/Image/Pointeur.png")' class="icon" />
                                CONNEXION
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>


        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="col-md-4">
                <label>A PROPOS DE NOUS</label>
                <p>
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi finibus maximus sem nec aliquam.
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent sed efficitur erat, eget rhoncus massa. 
                    Vivamus eu varius nulla. Mauris ex lacus, feugiat eu nunc nec, pharetra suscipit felis. Donec id lacus mi. 
                    Morbi interdum aliquam eros at rhoncus. Phasellus a tincidunt est, ac scelerisque risu
                </p>
            </div>
            <div class="col-md-4">
                <label>LIENS UTILES</label>
                <div class="row">
                    <div class="col-md-4">
                        <div>@Html.ActionLink("Accueil", "Index", new { Controller = "Home" }, null)</div>
                        <div>@Html.ActionLink("Article", "Index", new { Controller = "Articles" }, null)</div>
                        <div>@Html.ActionLink("Evenements", "Index", new { Controller = "Events" }, null)</div>
                    </div>
                    <div class="col-md-4">
                        <div><a href="https://www.twitter.com">Twitter</a></div>
                        <div><a href="https://www.facebook.com/offroad.biketeam?fref=ts">Facebook</a></div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <label>NOUS CONTACTER</label>
                <p>
                    Pour nous contacter, vous pouvez passer par notre page <a href="https://www.facebook.com/offroad.biketeam?fref=ts">Facebook</a> ou <a href="https://www.twitter.com">Twitter</a>,
                    ou passer par @Html.ActionLink("ici", "Contact", new { Controller = "Home/Contact" }, null).
                </p>
            </div>
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @RenderSection("CreateEvent", required: false)
</body>
</html>