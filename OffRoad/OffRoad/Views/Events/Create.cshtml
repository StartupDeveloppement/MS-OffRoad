@model OffRoad.Models.Event

@{
    ViewBag.Title = "Create";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="container-fluid">
    <div class="row banner">
        <div class="col-md-12">
            <div id="image-home">
                <img class="img-responsive" src="~/Content/Image/header_event.png" />
            </div>
        </div>
    </div>
</div>
<br /><br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <div class="col-md-10">
                        <label>Titre de l'évènement</label>
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10">
                    <label>Lieu du rassemblement</label>
                    @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-md-offset-1">
                    <label>@Html.LabelFor(model => model.BeginDate, htmlAttributes: new { @class = "control-label" })</label>
                    <input class="form-control" data-val="true" data-val-required="Ce champ est obligatoire" id="BeginDate" name="BeginDate" value="">
                </div>
                <div class="col-md-3 col-md-offset-2">
                    <label>@Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label " })</label>
                    <input class="form-control" data-val="true" data-val-required="Ce champ est obligatoire" id="EndDate" name="EndDate" value="">
                </div>
            </div>
            <br />
            <div class="row">
                <textarea name="Description" id="Text" rows="6" class="form-control"> </textarea>
            </div>
            <div class="row">
                <div class="form-actions" id="btn_supp">
                    <input type="submit" value="Publier l'aricle" class="btn btn-success btn-lg" />
                </div>
            </div>
        </div>
    </div>
    @Html.Hidden("CreateDate", DateTime.Now)
}

<script type="text/javascript">
    $(function () {
        $('#BeginDate').datetimepicker({
            locale: 'fr',
            sideBySide: true,
            format: 'MM/DD/YYYY HH:mm'
        });

        $('#EndDate').datetimepicker({
            locale: 'fr',
            sideBySide: true,
            format: 'MM/DD/YYYY HH:mm'
        });

        $('#Text').ckeditor();
    });
</script>


